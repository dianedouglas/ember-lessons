{{#if addNewCity}}
  <h1>New City</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=nameParam id="name"}}
      </div>
      <div class="form-group">
        <label for="country">Country</label>
        {{input value=countryParam id="country"}}
      </div>
      <button {{action 'getParamsEmitSave'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'cityFormShow'}}>New City</button>
{{/if}}